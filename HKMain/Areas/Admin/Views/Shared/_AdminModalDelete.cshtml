@using HKMain.Areas.Admin.Models
@model CommonModelRemove
@{
    Layout = null;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "modalFormDelete", @autocomplete = "off" }))
{
    <div class="modal-header">
        <h4 class="modal-title" >Xóa</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body d-flex justify-content-center">
        @Html.AntiForgeryToken()
        <input asp-for="@Model.Id" type="hidden" />
        <p >Bạn muốn xóa?: @Model.Name</p>
    </div>
    <div class="modal-footer justify-content-between">
        <span id="progress" class="text-center" style="display: none;"><img style="width: 15%;" src="~/images/wait.gif" alt="waiting..." />Saving...</span>
        <button type="button" class="btn btn-outline-light" data-dismiss="modal" >Đóng</button>
        <button type="submit" class="btn btn-outline-light" >Đồng ý</button>
    </div>
}

