@{
    ViewData["Title"] = "Danh sách danh mục";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách danh mục</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Member" asp-action="Index">Danh sách</a></li>
                        <li class="breadcrumb-item active">Thông tin</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Danh mục</h3>
                        </div>
                        <div class="card-body card-datatable table-responsive">
                            <table id="table_categories" class="datatables-category table table-bordered table-striped dataTable dtr-inline projects">
                                <thead class="border-top">
                                    <tr>
                                        <th></th>
                                        <th>#</th>
                                        <th>Tên</th>
                                        <th>Tên cha</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Bộ sưu tập</h3>
                        </div>
                        <div class="card-body card-datatable table-responsive">
                            <table id="table_collections" class="datatables-collection table table-bordered table-striped dataTable dtr-inline projects">
                                <thead class="border-top">
                                    <tr>
                                        <th></th>
                                        <th>#</th>
                                        <th>Tên</th>
                                        <th>Tên cha</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Nhà phân phối</h3>
                        </div>
                        <div class="card-body card-datatable table-responsive">
                            <table id="table_vendors" class="datatables-vendor table table-bordered table-striped dataTable dtr-inline projects">
                                <thead class="border-top">
                                    <tr>
                                        <th></th>
                                        <th>#</th>
                                        <th>Tên</th>
                                        <th>Tên cha</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Biến thể</h3>
                        </div>
                        <div class="card-body card-datatable table-responsive">
                            <table id="table_variants" class="datatables-variant table table-bordered table-striped dataTable dtr-inline projects">
                                <thead class="border-top">
                                    <tr>
                                        <th></th>
                                        <th>#</th>
                                        <th>Tên</th>
                                        <th>Tên cha</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/js/admin/hk.product-category-list.js"></script>
}