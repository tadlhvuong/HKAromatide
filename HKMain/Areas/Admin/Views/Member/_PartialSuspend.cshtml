@using HKMain.Areas.Admin.Models
@model CommonModel
@{
    Layout = null;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "modalSuspend", @autocomplete = "off" }))
{
    <div class="modal-header">
        <h4 class="modal-title" localize-content>RemoveText</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body d-flex justify-content-center">
        @Html.AntiForgeryToken()
        <input asp-for="@Model.Key" type="hidden" />
        <p localize-content>SuspendText?: @Model.Value</p>
    </div>
    <div class="modal-footer justify-content-between">
        <span id="progress" class="text-center" style="display: none;"><img style="width: 15%;" src="~/images/wait.gif" alt="waiting..." />Saving...</span>
        <button type="button" class="btn btn-outline-light" data-dismiss="modal" localize-content>CloseText</button>
        <button type="submit" class="btn btn-outline-light" localize-content>SuspendText</button>
    </div>
}

