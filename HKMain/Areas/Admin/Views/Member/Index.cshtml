@{
    ViewData["Title"] = "Thành viên";
}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách thành viên</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-datatable table-responsive">
                            <table id="table_users" class="datatables-users table table-bordered table-striped dataTable dtr-inline projects">
                                <thead class="border-top">
                                    <tr>
                                        <th></th>
                                        <th>UserName</th>
                                        <th>RoleName</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <input type="hidden" id="url_CRUD" value="@ViewBag.UrlCRUD" />
                    <input type="hidden" id="columns" value="@ViewBag.Columns" />
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/admin/hk.user-list.js"></script>
}   