@using HKMain.Areas.Admin.Models
@model List<MediaAlbum>
@{
    ViewBag.Icon = "fa-cubes";
    ViewBag.Title = "Danh sách Album";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách Album</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="Admin" title="ReturnHome">Dashboard</a></li>
                        <li class="breadcrumb-item active" title="Danh sách album">Danh sách</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-datatable table-responsive">
                            <table id="table_album" class="datatables-albums table table-bordered table-striped dataTable dtr-inline">
                                <thead class="border-top">
                                    <tr>
                                        <th></th>
                                        <th>#</th>
                                        <th>Tên album</th>
                                        <th>Tên đầy đủ</th>
                                        <th>Miêu tả</th>
                                        <th>Tác vụ</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/admin/hk.album-list.js"></script>
}   