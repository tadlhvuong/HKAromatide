@{
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Hồ sơ</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Order" asp-action="Shipping">Danh sách</a></li>
                        <li class="breadcrumb-item active">Thông tin </li>
                    </ol>
                </div>
            </div>
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-datatable table-responsive">
                            <table id="table_shippings" class="datatables-shipping table table-bordered table-striped dataTable dtr-inline projects">
                                <thead class="border-top">
                                    <tr>
                                        <th></th>
                                        <th>#</th>
                                        <th localize-content>Name</th>
                                        <th localize-content>Phone</th>
                                        <th localize-content>Address</th>
                                        <th localize-content>ZipCode</th>
                                        <th localize-content>Status</th>
                                        <th localize-content>Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/js/admin/hk.order-shipping.js"></script>
    <script src="~/plugins/select2/js/select2.full.min.js"></script>
}