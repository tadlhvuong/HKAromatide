@using HKMain.Areas.Admin.Models
@model ExternalLoginConfirmationViewModel
@{
   ViewData["Title"] = "Đăng nhập";
}
<div class="card-body">
    <p class="login-box-msg">Tên đăng nhập.</p>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Account" asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewBag.ReturnUrl" method="post">
        <div class="input-group mb-3">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email">
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary btn-block">Xác nhận</button>
            </div>
        </div>
    </form>
</div>
