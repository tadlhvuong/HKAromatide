@using HKMain.Areas.Admin.Models
@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}
@section Styles {
    <style type="text/css">
        .validation-summary-errors {
            color: red;
        }
    </style>
}
    <div class="card-body">
        <p class="login-box-msg">Nhập email đã đăng ký để lấy lại mật khẩu mới.</p>
        @Html.AntiForgeryToken()
        <div asp-validation-summary="All"></div>
        <form asp-area="Admin" asp-action="ForgotPassword" asp-controller="Account" method="post">
            <div class="input-group mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="Email">
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Xác nhận</button>
                </div>
            </div>
        </form>
        <p class="mt-3 mb-1">
            <a asp-action="Login" asp-controller="Account" asp-area="Admin">Quay lại đăng nhập</a>
        </p>
    </div>