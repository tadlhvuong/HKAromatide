@using HKMain.Areas.Admin.Models
@using HKShared.Data
@model Product
@{
    ViewData["Title"] = Model.Name;
    var variants = (List<ShopVariantDetails>)ViewBag.Variants;
}
@section Styles{
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
}

<main class="product-single">
    <section class="product-single__header">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__list">
                    <a class="breadcrumb__item" asp-controller="Home" asp-action="Index">
                        <span class="breadcrumb__home">
                            <span class="breadcrumb__icon">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9.13478 20.7733V17.7156C9.13478 16.9351 9.77217 16.3023 10.5584 16.3023H13.4326C13.8102 16.3023 14.1723 16.4512 14.4393 16.7163C14.7063 16.9813 14.8563 17.3408 14.8563 17.7156V20.7733C14.8539 21.0978 14.9821 21.4099 15.2124 21.6402C15.4427 21.8705 15.7561 22 16.0829 22H18.0438C18.9596 22.0023 19.8388 21.6428 20.4872 21.0008C21.1356 20.3588 21.5 19.487 21.5 18.5778V9.86686C21.5 9.13246 21.1721 8.43584 20.6046 7.96467L13.934 2.67587C12.7737 1.74856 11.1111 1.7785 9.98539 2.74698L3.46701 7.96467C2.87274 8.42195 2.51755 9.12064 2.5 9.86686V18.5689C2.5 20.4639 4.04738 22 5.95617 22H7.87229C8.55123 22 9.103 21.4562 9.10792 20.7822L9.13478 20.7733Z" fill="#200E32"></path>
                                </svg>
                            </span>
                            <span class="text">Trang Chủ</span>
                        </span>
                    </a>
                    <span class="breadcrumb__sep">/</span>
                    <a class="breadcrumb__item" asp-controller="Product" asp-action="Index">
                        Sản Phẩm
                    </a>
                    <span class="breadcrumb__sep">/</span>
                    <a class="breadcrumb__item">
                        @Model.Name
                    </a>
                    
                </div>
            </div> 
        </div>
    </section>
    <section class="product-single__main">
        <div class="container">
            <div class="product-single__content">
                <div class="product-single__images">
                    <div class="product-single__thumbs product-single-thumbs">
                        @for(var i=0; i<4; i++)
                        {
                            <div class="image">
                                <img src="@Model.LinkImage" alt="@Model.Image">
                            </div>
                        }
                        @* <div class="image" data-id="6663962d">
                            <img src="" alt="6663962d">
                        </div>
                        <div class="image" data-id="f3f54ad8">
                            <img src="" alt="f3f54ad8">
                        </div>
                        <div class="image" data-id="2296875f">
                            <img src="" alt="2296875f">
                        </div>
                        <div class="image" data-id="0c976d60">
                            <img src="" alt="0c976d60">
                        </div> *@
                    </div>
                    <div class="product-single__thumbnails product-single-thumbnails">
                        @for (var i = 0; i < 4; i++)
                        {
                            <div class="image" data-id="6663962d">
                                <img src="@Model.LinkImage"
                                     fetchpriority="high"
                                     loading="eager"
                                     decoding="sync"
                                     alt="@Model.Image">
                            </div>
                        }
                    </div>
                    <div class="shippingBox disable-max-767" style="margin-top:10px">
                        <div class="shippingBox_main wrap_pt">
                            <div class="shippingBox_main_item">
                                <div class="shippingBox_main_item_title">Phí ship</div>
                                <ul class="wr-shipd">
                                    <li>Các tỉnh còn lại - 25.000đ</li>
                                </ul>
                            </div>
                            <div class="shippingBox_main_item">
                                <div class="shippingBox_main_item_title">Thời gian ship dự kiến</div>
                                <ul>
                                    <li>Hà Nội, TP.HCM: 1-2 ngày</li>
                                    <li>Các tỉnh còn lại: 2-5 ngày</li>
                                </ul>
                            </div>
                        </div>
                        <div class="shippingBox_footer">
                            <span>Miễn phí</span> đổi trả sản phẩm lỗi do vận chuyển, sản xuất
                        </div>
                    </div>
                </div>

                <div class="product-single__summary">
                    <div class="product-single__heading">
                        <h1 class="heading" style="margin-bottom:12px;">@Model.Name</h1>

                        <div class="caption" data-sub-title-default=''>
                        </div>


                    </div>

                    <div class="product-single__ratenumber">
                    </div>

                    <div class="product-single__info">
                        <div class="product-single__prices" data-currentprice="@Model.CurrentPrice" data-regularprice="@Model.Price">
                            <ins>@Model.FormatedCurrentPrice</ins>
                            @if (Model.CurrentPrice != Model.Price)
                            {
                                <del>@Model.FormatedRegularPrice</del>
                            }
                        </div>
                    </div>
                    @if (Model.NewProduct)
                    {
                        <div class="product-single__maptags">
                            <span class="st-tag" style="background-color: #3e6807;">NEW</span>
                        </div>
                    }

                    <section class="detail-slproduct">
                        <div class="container-full">
                            <div class="detail-slproduct__wrapper">
                                <div class="container">
                                    <div class="grid grid--five-columns product-slide product-single-thumbnails">
                                        <div class="grid__column">
                                            <div class="slproduct-item" data-id="6663962d">
                                                <img src="@Model.LinkImage"
                                                     fetchpriority="high"
                                                     loading="eager"
                                                     decoding="sync"
                                                     alt="@Model.Image"
                                                     width="288"
                                                     height="288">
                                            </div>
                                        </div>
                                        <div class="grid__column">
                                            <div class="slproduct-item" data-id="f3f54ad8">
                                                <img class="lazyload"
                                                     data-src="@Model.LinkImage"
                                                     loading="lazy"
                                                     fetchpriority="low"
                                                     decoding="async"
                                                     alt="@Model.Image"
                                                     width="288"
                                                     height="288">
                                            </div>
                                        </div>
                                        <div class="grid__column">
                                            <div class="slproduct-item" data-id="2296875f">
                                                <img class="lazyload"
                                                     data-src="@Model.LinkImage"
                                                     loading="lazy"
                                                     fetchpriority="low"
                                                     decoding="async"
                                                     alt="@Model.Image"
                                                     width="288"
                                                     height="288">
                                            </div>
                                        </div>
                                        <div class="grid__column">
                                            <div class="slproduct-item" data-id="0c976d60">
                                                <img class="lazyload"
                                                     data-src="@Model.LinkImage"
                                                     loading="lazy"
                                                     fetchpriority="low"
                                                     decoding="async"
                                                     alt="@Model.Image"
                                                     width="288"
                                                     height="288">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    @if (variants.Count > 0)
                    {
                        foreach (var item in variants)
                        {
                            <div class="product-single__options product-single--options" data-option-id="@item.Id" data-index="option1">
                                <span class="label">@item.Name</span>
                                <div class="options">
                                    @foreach (var child in item.VariantChild)
                                    {
                                        <label class="option">
                                            <input type="radio" name="@item.Id" value="@child.Id" checked data-nameParent="@item.Name" data-nameChild="@child.Name">
                                            <span class="checkmark"></span>
                                            <span class="checkmark-label">@child.Name</span>
                                        </label>
                                    }
                                </div>
                            </div>
                        }
                    }
                    <div class="product-single__actions ">
                        <input type="hidden" name="id" value="@Model.Id">
                        <div class="product-single__quantity">
                            <div class="quantity product-quantity-change">
                                <a href="#" class="minus">-</a>
                                <input type="number" name="quantity" min="1" value="1">
                                <a href="#" class="plus">+</a>
                            </div>
                            <button class="label btn-addtocart">Thêm vào giỏ hàng</button>
                        </div>
                    </div>


                   @*  <div class="product-single__features">
                        <div class="item">
                            <span class="label">
                                
                            </span>
                            <span class="description"></span>
                        </div>
                        <div class="item">
                            <span class="label">
                                
                            </span>
                            <span class="description"></span>
                        </div>
                        <div class="item">
                            <span class="label">
                                
                            </span>
                            <span class="description"></span>
                        </div>
                        <div class="item">
                            <span class="label">
                                
                            </span>
                            <span class="description"></span>
                        </div>
                    </div> *@

                    <!-- START:: PROMOTIONS -->
                    <!-- END:: PROMOTIONS -->
                    <div class="shippingBox enable-max-767" style="">
                        <div class="shippingBox_main wrap_pt">
                            <div class="shippingBox_main_item">
                                <div class="shippingBox_main_item_title">Phí ship</div>
                                <ul class="wr-shipd">
                                    <li class="ship-district">
                                        Nội thành Hồ Chí Minh - 20.000đ
                                    </li>
                                    <li>Các tỉnh còn lại - 25.000đ</li>
                                </ul>
                            </div>
                            <div class="shippingBox_main_item">
                                <div class="shippingBox_main_item_title">Thời gian ship dự kiến</div>
                                <ul>
                                    <li>TP.HCM: 1-2 ngày</li>
                                    <li>Các tỉnh còn lại: 2-5 ngày</li>
                                </ul>
                            </div>
                        </div>
                        <div class="shippingBox_footer">
                            <span>Miễn phí</span> đổi trả sản phẩm lỗi do vận chuyển, sản xuất
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- START:: BANNER COMBO -->
    <!-- END:: BANNER COMBO -->
    <section class="product-single__infomations">
        <div class="container">
            <div class="infomations__content">
                <h2 id="thong-tin-san-pham" class="infomations__heading">
                    Thông tin sản phẩm
                    <span>
                        <a href="#thong-tin-san-pham" class="infomations__more infomations-loadmore">Xem chi tiết</a>
                    </span>
                </h2>
                <div class="info-description" style="position: relative; padding: 0 19%;">
                    <div class="infomations__descriptions" style="margin-top:20px;">
                        @Html.Raw(Model.Content)
                    </div>

                    <a href="#thong-tin-san-pham" class="infomations__more infomations-collapse">Thu gọn</a>
                </div>
            </div>
        </div>
    </section>
</main>
@section Scripts {
    <script src="~/js/home/product.js" asp-append-version="true"></script>
}